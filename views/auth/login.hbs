<div class="auth">
    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s6"><a href="#login" class="active">Вход</a></li>
                <li class="tab col s6"><a href="#register">Регистрация</a></li>

            </ul>
        </div>
        <div id="login" class="col s6 offset-s3">
            {{#if loginError}}
                <p class="red-text center-align pulse">{{loginError}}</p>
            {{/if}}
            <h1 class="center-align">Войти в магазин</h1>
            <form action="/auth/login" method="POST">
                <div class="input-field">
                    <input id="email" name="email" type="email" class="validate" required>
                    <label for="email">Email</label>
                    <span class="helper-text" data-error="Введите email"></span>
                </div>

                <div class="input-field">
                    <input id="password" name="password" type="password" class="validate" required min="7">
                    <label for="password">Password</label>
                    <span class="helper-text" data-error="Введите пароль"></span>
                </div>

                <input type="hidden" name="_csrf" value="{{csrf}}">
                <p><a href="/auth/reset">Забыли пароль?</a></p>
                <button class="btn btn-primary col s6 offset-s3" type="submit">Войти</button>
            </form>
        </div>
        <div id="register" class="col s6 offset-s3">
            {{#if registerError}}
                <p class="red-text center-align pulse">{{registerError}}</p>
            {{/if}}
            <h1 class="center-align">Регистрация в магазине</h1>
            <form action="/auth/register" method="POST">
                <div class="input-field">
                    <input id="remail" name="email" type="email" class="validate" required>
                    <label for="remail">Email</label>
                    <span class="helper-text" data-error="Введите email"></span>
                </div>

                <div class="input-field">
                    <input id="name" name="name" type="text" class="validate" required>
                    <label for="name">Name</label>
                    <span class="helper-text" data-error="Введите имя"></span>
                </div>

                <div class="input-field">
                    <input id="rpassword" name="password" type="password" class="validate" required min="7">
                    <label for="rpassword">Password</label>
                    <span class="helper-text" data-error="Введите пароль"></span>
                </div>

                <div class="input-field">
                    <input id="confirm" name="confirm" type="password" class="validate" required min="7">
                    <label for="confirm">Password check</label>
                    <span class="helper-text" data-error="Введите пароль"></span>
                </div>
                <input type="hidden" name="_csrf" value="{{csrf}}">

                <button class="btn btn-primary col s6 offset-s3" type="submit">Зарегестрироваться</button>
            </form>
        </div>
    </div>


</div>
